{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Density of domestic tourists (per 1000000 population) in each states of Malaysia 2023",
    "fontSize": 20
  },
  "projection": {"type": "mercator", "scale": 2000, "translate": [-3400, 300]},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vortwx/Homework-W9/main/js/ne_10m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Vortwx/Homework-W9/main/data/2023%20Malaysia%20Domestic%20Tourism.csv"
            },
            "key": "States",
            "fields": ["total_visitor_per_10k_pop", "Visitors"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "total_visitor_per_10k_pop",
          "title": "visitors per 1000000 population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.5, 1, 1.5, 2],
            "range": ["#feebe2", "#fbb4b9", "#f768a1", "#c51b8a", "#7a0177"]
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {
            "field": "total_visitor_per_10k_pop",
            "type": "quantitative",
            "title": "Domestic Visitors Density (per 10000 population)",
            "format": ".2f"
          },
          {"field": "Visitors", "type": "quantitative"}
        ]
      }
    },
    {
      "data": {"graticule": {"step": [1, 1]}},
      "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5}
    }
  ],
  "config": {}
}