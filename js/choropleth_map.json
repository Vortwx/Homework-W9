{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Percentage of domestic tourists in each states of Malaysia 2023",
    "fontSize": 20
  },
  "projection": {"type": "mercator", "scale": 2000, "translate": [-3400, 300]},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Vortwx/Homework-W9/main/js/ne_10m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Vortwx/Homework-W9/main/data/2023%20Malaysia%20Domestic%20Tourism.csv"
            },
            "key": "States",
            "fields": ["Total_visitor_percentage", "Visitors"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Total_visitor_percentage",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [2, 4, 6, 8, 10, 12],
            "range": [
              "#feedde",
              "#fdd0a2",
              "#fdae6b",
              "#fd8d3c",
              "#f16913",
              "#d94801",
              "#8c2d04"
            ]
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {
            "field": "Total_visitor_percentage",
            "type": "quantitative",
            "title": "Domestic Visitors Percentage (%)",
            "format": ".2f"
          },
          {"field": "Visitors", "type": "quantitative"}
        ]
      }
    },
    {
      "data": {"graticule": {"step": [1, 1]}},
      "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5}
    }
  ],
  "config": {}
}